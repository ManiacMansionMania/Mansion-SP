****************************/
function hPflanze_AnyClick()
{
	if (any_click_move(154, 129, eDirectionLeft))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.SayIfIsEdisonElse("Eine unserer schönen Pflanzen.", "Eine schöne Pflanze.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich brauche keine Deko-Objekte.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich könnte sie gießen.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			
			if ( player.ActiveInventory == iDuenger )
			{
				player.Say("Die wurde schon gedüngt. Erst kürzlich.");
			}
			else
			{
				player.Say("Das möchte ich nicht darin verstecken.");
			}
		}
		else Unhandled();
	}
}

