/****************************
*   Hotspot-Funktionen
****************************/
function hGaragentor_AnyClick()
{
	if (any_click_move(264, 141, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Das Garagentor.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Hahaha.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Und wie bitte?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Das ist doch schon offen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			if ( (player.x >= 150) && (player.y <= 135) ) // Steht Spieler in der Garage?
			{
				if ( any_click_move(229, 134, eDirDown) )
				{
					Wait(15);
					if ( gl_Garagentor != 2 )
					{
						Wait(20);
						PlaySound(44);
						
						oGaragentorO.Visible	= true;
						oKlappe2.Visible			= true;
						
						RestoreWalkableArea(1);
						RestoreWalkableArea(2);
						oGaragentorO.Baseline	= 198;
						oKlappe1.Baseline			= 198;
						oKlappe2.Baseline			= 199;
						gl_Garagentor					= 0;
						
						hGaragentor.Enabled		= false;
						hAuto.Enabled					= false;
						
						oKofferraumC.Visible = false;
						oKofferraumO.Visible = false;
					}
					else
					{
						PlaySound(44);
						player.Say("Abgeschlossen.");
					}
				}
			}
			else if ( (player.x < 150) || (player.y > 135) ) // Spiler ausserhalb der Garage
			{
				if ( any_click_move(264, 141, eDirUp) )
				{
					Wait(15);
					Wait(20);
					PlaySound(44);

					oGaragentorO.Visible	= true;
					oKlappe2.Visible			= true;
					oGaragentor.Visible		= true;

					RestoreWalkableArea(1);
					RemoveWalkableArea(2);
					
					oGaragentorO.Baseline	= 1;
					oKlappe1.Baseline			= 1;
					oKlappe2.Baseline			= 1;
					gl_Garagentor					= 1;

					hLuke.Enabled					= true;
					hGaragentor.Enabled		= false;
					hAuto.Enabled					= false;

					oKofferraumC.Visible = false;
					oKofferraumO.Visible = false;
				}
			}
		}
		else Unhandled();
	}
}

function hAuto_AnyClick()
{
	if (any_click_move(282, 141, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.SayIfIsEdisonElse("Unser heißer Schlitten.", "Keine Räder?");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Der ist mir zu schwer.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.SayIfIsEdisonElse("Nein, lieber nicht. Der ist noch voller Schleim.", "Ich habe keine Schlüssel, oder was immer man dafür braucht.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Das geht nur mit dem Kofferraum.");
		}
		else Unhandled();
	}
}


